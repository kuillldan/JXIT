<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<!-- 所以的Struts2程序都要设置命名空间 -->
	<package name="root" namespace="/" extends="struts-default">
		
		
		<global-results>
			<result name="errorJSP">/pages/common/error.jsp</result>
		</global-results>
		
		<action name="uploadAction" class="actions.UploadAction">
			
			<interceptor-ref name="fileUpload">
				<param name="maximumSize">42428800</param> 
				<param name="allowedTypes">image/bmp,image/jpg,image/jpeg,image/gif,image/png</param>
			</interceptor-ref>
			
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="good">good.jsp</result>
			<result name="input">upload.jsp</result>
			
		</action>
		
		
		<action name="InputAction" class="actions.InputAction">
			<result name="good">/pages/common/good.jsp</result>
		</action>
		
		<action name="EmpAction" class="actions.EmpActions">
			<result name="good">/pages/common/good.jsp</result>
		</action>
		
		<action name="ConvertAction" class="actions.ConvertAction">
			<result name="welcomeJSP">/welcome.jsp</result>
		</action>
		 
	</package>
</struts>    