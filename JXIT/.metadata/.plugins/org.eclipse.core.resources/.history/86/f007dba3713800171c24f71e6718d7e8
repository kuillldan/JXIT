package actions;

import vo.News;

import com.opensymphony.xwork2.ActionSupport;

@SuppressWarnings("serial")
public class NewsAction extends ActionSupport
{
	private static Integer count = 0;
	private News news = new News();
	public News getNews()
	{
		return news;
	}
	 
	public NewsAction()
	{
		System.out.println("****NewsAction初始化" + ++count);
	}
	
	public void insert()
	{
		System.out.println("******增加新闻操作******" + this.news);
	}
	
	public void update()
	{
		System.out.println("******修改新闻操作******" + this.news) ;
	}
	
	public void list()
	{
		System.out.println("*****列出新闻操作******" + this.news);
	}
}
