package org.lyk.main;

import java.lang.reflect.Constructor;
import java.lang.reflect.Field;
import java.lang.reflect.Method;
import java.lang.reflect.Modifier;
import java.sql.*;
import java.text.*;
import java.util.*;

import utils.StringUtils;

public class Main
{
	public static void main(String[] args) throws Exception
	{
		Class cls = Class.forName("org.lyk.vo.Dept");
		Object obj = cls.newInstance();
		System.out.println(Integer.class.getSimpleName());
		String info = "dname:研发部|loc:上海|deptno:50";

		String[] allFields = info.split("\\|");
		for (String field : allFields)
		{
			String fieldName = field.split(":")[0];
			String fieldValue = field.split(":")[1];
			Field f = cls.getDeclaredField(fieldName);
			
			Method setter = cls.getDeclaredMethod("set" + StringUtils.initCap(fieldName), f.getType());
			if("String".equalsIgnoreCase(f.getType().getSimpleName()))
			{
				setter.invoke(obj, fieldValue);
			}else if("Integer".equalsIgnoreCase(f.getType().getSimpleName()))
			{
				setter.invoke(obj, Integer.parseInt(fieldValue));
			}
		}
		
		System.out.println(obj);

		System.out.println("///Main done~~");
	}
}
