		</field-validator>
		
		<field-validator type="required">
			<message>【验证框架】新闻编号不能为空</message>
		</field-validator>
	</field>
	<field name="news.title">
		<field-validator type="stringlength">
			<param name="minLength">6</param>
			<param name="maxLength">15</param>
			<message>【验证框架】新闻标题长度必须为6-15</message>
		</field-validator>
		
		<field-validator type="required">
			<message>【验证框架】新闻标题不能为空</message>
		</field-validator>
	</field>
	<field name="news.content">
		<field-validator type="requiredstring">
			<message>【验证框架】新闻内容不能为空</message>
		</field-validator>
	</field>
	<field name="news.pubdate">
		<field-validator type="date">
			<param name="min">1990-01-01</param>
			<param name="max">2019-12-30</param>
		</field-validator>
		<field-validator type="required">
			<message>【验证框架】新闻发布日期不能为空</message>
		</field-validator>
	</field>
