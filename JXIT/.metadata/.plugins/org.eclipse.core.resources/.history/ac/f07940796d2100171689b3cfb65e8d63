package org.lyk.vo;

import java.io.ByteArrayOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.InputStream;

public class LYKClassLoader
{
	public static final String CLASSPATH = "C:" + File.separator + "D" + File.separator + "classes" + File.separator;
	public static final String BUFFERSIZE = 1024;//1024byte(1K) 
	public void loadMyClass(String className)
	{
		
	}
	private byte[] loadClassFile(String className) throws Exception
	{
		byte[] classInByte = null;
		String classSimpleName = className.substring(className.lastIndexOf(".") + 1);
		InputStream is = new FileInputStream(new File(CLASSPATH + classSimpleName));
		byte[] buffer = new byte[BUFFERSIZE];
		is.close();
		return classInByte;
	}
}