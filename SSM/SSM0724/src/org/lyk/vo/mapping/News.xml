<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.lyk.vo.mapping.NewsNS">
	<resultMap type="News" id="resultMapNews">
		<id property="nid" column="nid" />
		<result property="title" column="title" />
		<result property="pub_date" column="pubdate" />
		<result property="content" column="content" />
	</resultMap>
	
	<insert id="doCreate" parameterType="News">
		INSERT INTO news(title,pub_date,content) VALUES(#{title},#{pubdate},#{content})
	</insert>
	
	<select id="findById" parameterType="Integer" resultMap="resultMapNews">
		SELECT nid,title,pub_date,content FROM news WHERE nid=#{nid}
	</select>
</mapper>